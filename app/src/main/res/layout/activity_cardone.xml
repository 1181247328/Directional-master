<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:baselineAligned="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/rl_cardone_return"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/pldetails_return" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="暗 号 卡"
                android:textColor="#FFFF00"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/explore" />

            <LinearLayout
                android:id="@+id/ll_cardone_layouttwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_cardone_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:text="请前往一号点"
                    android:textColor="#FFFF00"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.gcssloop.widget.RCRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    app:clip_background="true"
                    app:round_corner="20dp">

                    <ImageView
                        android:id="@+id/iv_cardone_address"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test1" />

                </com.gcssloop.widget.RCRelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cardone_layoutone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone">

                <com.gcssloop.widget.RCRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    app:clip_background="true"
                    app:round_corner="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp">

                        <org.sufficientlysecure.htmltextview.HtmlTextView
                            android:id="@+id/htv_cardone_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ll_agreement_bottom"
                            android:layout_below="@id/rl_agreement_top"
                            android:lineSpacingExtra="4dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="#993300"
                            android:textIsSelectable="true"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_cardone_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="15dp"
                            android:text="提示:你的接头人身穿深蓝色衣服，你们的暗号为你讲红色，对头行动。"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.gcssloop.widget.RCRelativeLayout>

                <com.gcssloop.widget.RCRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    app:clip_background="true"
                    app:round_corner="40dp">

                    <EditText
                        android:id="@+id/xet_cardone_password"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="请提示管理员输入验证码"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/selected_all"
                        android:textSize="18sp" />

                </com.gcssloop.widget.RCRelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
