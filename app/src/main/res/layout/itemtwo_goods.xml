<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_8">

            <com.gcssloop.widget.RCRelativeLayout
                android:id="@+id/rctl_forpayment_item_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@color/white"
                app:round_corner="@dimen/dp_4">

                <ImageView
                    android:id="@+id/iv_order_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test2" />

            </com.gcssloop.widget.RCRelativeLayout>

            <TextView
                android:id="@+id/tv_order_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rctl_forpayment_item_icon"
                android:lineSpacingExtra="@dimen/dp_1"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="欢乐兴安纪念牌一日游"
                android:textColor="@color/order_item_one"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order_item_title"
                android:background="@color/white"
                android:gravity="left|bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/orderdetails_two"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="108.00"
                    android:textColor="@color/orderdetails_two"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="bottom|right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/order_item_one"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_order_item_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="1"
                        android:textColor="@color/order_item_one"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
