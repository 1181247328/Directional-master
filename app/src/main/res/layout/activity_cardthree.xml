<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:background="@mipmap/card_back"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/ll_cardone_layout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/rl_cardone_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/card_three_return"
                    android:paddingLeft="@dimen/dp_10">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/travelcontext_cancel" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cardone_layout_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cardone_layout_one"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="答题卡"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cardthree_layouttwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cardone_layout_two"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/card_three_shape"
                android:orientation="vertical">

                <com.gcssloop.widget.RCRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:clip_background="true"
                    app:round_corner="@dimen/dp_3">

                    <ImageView
                        android:id="@+id/iv_cardthree_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test1" />

                </com.gcssloop.widget.RCRelativeLayout>

                <TextView
                    android:id="@+id/tv_cardthree_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_10"
                    android:text="请到达下一个目标点:"
                    android:textColor="@color/card_three_font"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_cardthree_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_14"
                    android:text="红军长征突破湘江纪念烈士园"
                    android:textColor="@color/card_three"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <com.gcssloop.widget.RCRelativeLayout
                android:id="@+id/ll_cardthree_layoutone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cardone_layout_two"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="gone"
                app:clip_background="true"
                app:round_corner="@dimen/dp_3"
                app:stroke_color="@color/card_three_shape"
                app:stroke_width="@dimen/dp_0_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20">

                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/htv_cardthree_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ll_agreement_bottom"
                        android:layout_below="@id/rl_agreement_top"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/cart_three_one"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/dp_20"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_cardthree_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/card_three_shape"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="请在下列选出我是谁的正确答案?"
                        android:textColor="@color/card_three"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <com.cdqf.dire_view.ListViewForScrollView
                        android:id="@+id/lvfsv_cardthree_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@android:color/transparent"
                        android:divider="@null"
                        android:dividerHeight="@dimen/dp_15"
                        android:scrollbars="none" />

                </LinearLayout>

            </com.gcssloop.widget.RCRelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cardthree_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cardone_layout_two"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="@dimen/dp_37"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="开始答题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
