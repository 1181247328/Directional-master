<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <com.cdqf.dire_view.VerticalSwipeRefreshLayout
        android:id="@+id/srl_plant_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selected_all"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/selected_all"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_main_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/order_click_two"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/plantscience_return" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_position_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center"
                    android:text="白鹭湾探索类活动"
                    android:textColor="@color/main_one"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/rl_main_message"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/order_click_two"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|center"
                        android:text="其它"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/selected_back" />

            <RelativeLayout
                android:id="@+id/rl_orders_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/selected_back"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pb_orders_bar"
                    style="@android:style/Widget.ProgressBar.Inverse"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_orders_abnormal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="异常,请下拉刷新~"
                android:textColor="@color/selected_back"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_ble_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_15">

                    <!--主体区-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_180"
                        android:background="@android:color/transparent"
                        android:paddingTop="@dimen/dp_5">

                        <com.zhouwei.mzbanner.MZBannerView
                            android:id="@+id/mzbv_details_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:background="@android:color/transparent"
                            app:canLoop="true"
                            app:indicatorAlign="center"
                            app:indicatorPaddingLeft="@dimen/dp_10"
                            app:middle_page_cover="false"
                            app:open_mz_mode="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_probe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="手装大炮"
                        android:textColor="@color/main_one"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_probe_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="    白鹭印象休闲庄简称白鹭湾印象花园，印象花园位于三圣乡白鹭湾湿地公园一号门旁200米处，占地约200亩。紧邻白鹭湾湿地公园和江家艺苑两大湿地公园 白鹭湾印象花园是一家集中餐包席、公司会议、拓展住宿、美食、休闲娱乐为一...."
                        android:textColor="@color/main_one"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/selected_all" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="活动规划"
                        android:textColor="@color/main_two"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <com.gcssloop.widget.RCRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@color/white"
                        app:clip_background="true"
                        app:round_corner="@dimen/dp_4"
                        app:stroke_color="@color/selected_all"
                        app:stroke_width="@dimen/dp_1">

                        <com.cdqf.dire_view.ListViewForScrollView
                            android:id="@+id/lvfsv_probe_list"
                            android:layout_width="match_parent"
                            android:paddingBottom="@dimen/dp_8"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:divider="@null" />

                    </com.gcssloop.widget.RCRelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="活动奖励"
                        android:textColor="@color/main_two"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <com.gcssloop.widget.RCRelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@color/white"
                        app:clip_background="true"
                        app:round_corner="@dimen/dp_4"
                        app:stroke_color="@color/selected_all"
                        app:stroke_width="@dimen/dp_1">

                        <com.cdqf.dire_view.ListViewForScrollView
                            android:id="@+id/lvfsv_probe_award"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dp_8"
                            android:background="@android:color/transparent"
                            android:divider="@null" />

                    </com.gcssloop.widget.RCRelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="密码输入"
                        android:textColor="@color/main_two"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <com.gcssloop.widget.RCRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@color/white"
                        app:clip_background="true"
                        app:round_corner="@dimen/dp_4"
                        app:stroke_color="@color/selected_all"
                        app:stroke_width="@dimen/dp_1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_8">

                            <com.gcssloop.widget.RCRelativeLayout
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_8"
                                android:background="@android:color/transparent"
                                app:clip_background="true"
                                app:round_as_circle="true"
                                app:stroke_color="@color/context"
                                app:stroke_width="@dimen/dp_0_5" />

                            <EditText
                                android:id="@+id/et_probe_password"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"
                                android:hint="请输入密码"
                                android:paddingLeft="@dimen/dp_8"
                                android:paddingRight="@dimen/dp_8"
                                android:singleLine="true"
                                android:textColor="@color/main_one"
                                android:textColorHint="@color/context"
                                android:textCursorDrawable="@drawable/nickname_cursor"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </com.gcssloop.widget.RCRelativeLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </com.cdqf.dire_view.VerticalSwipeRefreshLayout>

</LinearLayout>
