<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:clip_background="true"
        app:round_corner_top_left="@dimen/dp_4"
        app:round_corner_top_right="@dimen/dp_4">

        <ListView
            android:id="@+id/lv_scenic_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:divider="@color/login_background"
            android:dividerHeight="@dimen/dp_0_5"
            android:scrollbars="none" />

    </com.gcssloop.widget.RCRelativeLayout>

</LinearLayout>
