<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.gcssloop.widget.RCRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:round_corner="@dimen/dp_4">

            <ImageView
                android:id="@+id/iv_planningdetails_item_pituce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@mipmap/test2"
                app:bubble_angle="@dimen/dp_10"
                app:bubble_arrowHeight="@dimen/dp_10"
                app:bubble_arrowLocation="right"
                app:bubble_arrowOffset="@dimen/dp_10"
                app:bubble_arrowTop="@dimen/dp_10"
                app:bubble_arrowWidth="@dimen/dp_10"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tv_planningdetails_item_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_planningdetails_item_pituce"
                android:gravity="center_horizontal"
                android:lines="1"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="西门"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

        </com.gcssloop.widget.RCRelativeLayout>

    </LinearLayout>
</LinearLayout>
