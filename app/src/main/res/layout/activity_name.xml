<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_seabed_nickname_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="姓名设置"
                    android:textColor="@color/name_one"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_nickname_determine"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="确定"
                    android:textColor="@color/name_one"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:id="@+id/rl_nickname_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_17"
                        android:layout_centerVertical="true"
                        android:scaleType="fitStart"
                        android:src="@mipmap/plantscience_return" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <EditText
            android:id="@+id/et_nickname_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/personal_list"
            android:gravity="top|left"
            android:hint="请输入姓名"
            android:maxLength="12"
            android:padding="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/name_two"
            android:textColorHint="@color/name_two"
            android:textCursorDrawable="@drawable/nickname_cursor"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>
