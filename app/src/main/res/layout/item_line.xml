<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shop_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_line_item_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/line"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_16"
            android:textColor="@color/route_determine"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_15"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@mipmap/details_return" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_line_item_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_line_item_timer"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="@dimen/dp_3"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

</LinearLayout>
