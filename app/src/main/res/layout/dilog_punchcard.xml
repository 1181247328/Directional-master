<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:clip_background="true"
        app:round_corner="@dimen/dp_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_punchcard_medal"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/punch_card_yes" />

            <TextView
                android:id="@+id/tv_punchcard_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="这是一个勋章"
                android:textColor="@color/main_one"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_30">

                <com.gcssloop.widget.RCRelativeLayout
                    android:id="@+id/rcrl_punchcard_farmers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_50"
                    android:background="@color/main_two"
                    app:clip_background="true"
                    app:round_corner="@dimen/dp_4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="确认打卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                </com.gcssloop.widget.RCRelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </com.gcssloop.widget.RCRelativeLayout>

</LinearLayout>
