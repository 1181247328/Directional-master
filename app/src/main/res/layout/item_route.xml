<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/rcrl_route_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@color/white"
        app:clip_background="true"
        app:round_corner="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_route_item_back"
            android:layout_width="@dimen/dp_3"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/main_team_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_toLeftOf="@id/tv_route_item_back"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_route_item_title"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_23"
                    android:background="@color/main_team_back" />

                <TextView
                    android:id="@+id/tv_route_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_8"
                    android:text="全点测试"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_23"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tv_route_item_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_8"
                    android:text="自由规划"
                    android:textColor="@color/main_team_back"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

        </LinearLayout>

    </com.gcssloop.widget.RCRelativeLayout>

</LinearLayout>
