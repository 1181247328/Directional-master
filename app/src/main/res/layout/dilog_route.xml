<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_route_dilog_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_20"
        android:text="是否确定"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <com.gcssloop.widget.RCRelativeLayout
            android:id="@+id/tv_route_dilog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            app:clip_background="true"
            app:round_corner="@dimen/dp_2"
            app:stroke_color="@color/general_one"
            app:stroke_width="@dimen/dp_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

        </com.gcssloop.widget.RCRelativeLayout>

        <com.gcssloop.widget.RCRelativeLayout
            android:id="@+id/tv_route_dilog_determine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/route_determine"
            app:clip_background="true"
            app:round_corner="@dimen/dp_2"
            app:stroke_color="@color/general_one"
            app:stroke_width="@dimen/dp_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </com.gcssloop.widget.RCRelativeLayout>

    </LinearLayout>

</LinearLayout>
