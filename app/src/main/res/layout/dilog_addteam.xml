<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:clip_background="true"
        app:round_corner="@dimen/dp_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team_dilog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_30"
                android:text="添加队伍"
                android:textColor="@color/main_one"
                android:textSize="@dimen/sp_14" />

            <com.gcssloop.widget.RCRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@android:color/transparent"
                app:clip_background="true"
                app:round_corner="@dimen/dp_4"
                app:stroke_color="@color/main_two"
                app:stroke_width="@dimen/dp_0_5">

                <EditText
                    android:id="@+id/et_adteam_dilog_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@android:color/transparent"
                    android:hint="输入队伍"
                    android:maxLength="8"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/main_one"
                    android:textColorHint="@color/context"
                    android:textCursorDrawable="@drawable/nickname_cursor"
                    android:textSize="@dimen/sp_14" />

            </com.gcssloop.widget.RCRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15"
                android:background="@android:color/transparent">

                <com.gcssloop.widget.RCRelativeLayout
                    android:id="@+id/rcrl_team_dilog_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@color/main_two"
                    app:clip_background="true"
                    app:round_corner="@dimen/dp_4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                </com.gcssloop.widget.RCRelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </com.gcssloop.widget.RCRelativeLayout>

</LinearLayout>
