<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <com.cdqf.dire_view.VerticalSwipeRefreshLayout
        android:id="@+id/srl_plant_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selected_all"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/selected_all"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_main_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/order_click_two"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/plantscience_return" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_position_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center"
                    android:text="组队"
                    android:textColor="@color/main_one"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/rl_main_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/order_click_two"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_10"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|center"
                        android:text="创建队伍"
                        android:textColor="@color/main_two"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/selected_back" />

            <LinearLayout
                android:id="@+id/ll_group_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/selected_back"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_orders_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/selected_back"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/pb_orders_bar"
                        style="@android:style/Widget.ProgressBar.Inverse"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tv_group_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/selected_back"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:visibility="gone">

                        <com.gcssloop.widget.RCRelativeLayout
                            android:id="@+id/rcrl_group_seek"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_40"
                            android:background="@color/general_one"
                            app:clip_background="true"
                            app:round_corner="@dimen/dp_20">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_40"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="搜索队伍"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_19"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/team_seek" />


                            </LinearLayout>


                        </com.gcssloop.widget.RCRelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/selected_back"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/team_flag" />

                        <TextView
                            android:id="@+id/tv_orders_abnormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_8"
                            android:text="暂无队伍,请加入~"
                            android:textColor="@color/main_one"
                            android:textSize="@dimen/sp_14" />

                        <com.gcssloop.widget.RCRelativeLayout
                            android:id="@+id/rcrl_group_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_80"
                            android:layout_marginTop="@dimen/dp_70"
                            android:layout_marginRight="@dimen/dp_80"
                            android:background="@color/main_two"
                            app:clip_background="true"
                            app:round_corner="@dimen/dp_20">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:text="加入队伍"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                        </com.gcssloop.widget.RCRelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/selected_back" />

            <LinearLayout
                android:id="@+id/ll_ble_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <!--主体区-->
                <com.gcssloop.widget.RCRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    app:clip_background="true"
                    app:round_corner="@dimen/dp_4"
                    app:stroke_color="@color/selected_all"
                    app:stroke_width="@dimen/dp_0_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.gcssloop.widget.RCRelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/main_two"
                                app:clip_background="true"
                                app:round_corner="@dimen/dp_4">

                                <TextView
                                    android:id="@+id/rcrl_group_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:paddingLeft="@dimen/dp_40"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_40"
                                    android:paddingBottom="@dimen/dp_10"
                                    android:singleLine="true"
                                    android:text="队名"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14" />

                            </com.gcssloop.widget.RCRelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_group_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_25"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/dp_8"
                            android:singleLine="true"
                            android:text="总人数: 9人"
                            android:textColor="@color/main_one"
                            android:textSize="@dimen/sp_14" />

                        <com.cdqf.dire_view.ListViewForScrollView
                            android:id="@+id/lvfsv_group_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@android:color/transparent"
                            android:divider="@null"
                            android:scrollbars="none" />

                    </LinearLayout>

                </com.gcssloop.widget.RCRelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </com.cdqf.dire_view.VerticalSwipeRefreshLayout>

</LinearLayout>
